/* components/shopping-basket/shopping-basket.wxss */
.basket-container{
    height: 100rpx;
    width: 100%;
    /*border-top: solid 1px #ccc;*/
    color: #313131;
    z-index: 10000;
    background: #fff;
}
.inner{
    height: 100rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
}
.basket-icon{
    width: 64rpx;
    height: 64rpx;
    border-radius: 50%;
    border: solid 1px #ccc;
    margin-left: 30rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    position: relative;
}
.basket-icon-active{
    border: solid 1px #FF8200;
}
.basket-icon .icon-zhuye-caigou{
    font-size: 64rpx;
}
.basket-icon .num{
    font-size: 24rpx;
    padding: 0 10rpx;
    border-radius: 18rpx;
    position: absolute;
    right: 0;
    transform: translateX(50%);
    top: -10rpx;
    background: #FF8200;
    color: #fff;
}
.basket-icon .purchase-class{
    color: #FF8200;
}
.basket-icon image{
    width: 50rpx;
    height: 50rpx;
    border-radius: 50%;
}
.basket-container .meg{
    width: 420rpx;
    margin-left: 30rpx;
    font-size: 32rpx;
}
.basket-container .meg .no-goods{
    color: #ccc;
}
.basket-container .meg .total{
    color: #333333;
}
.basket-container .meg .total view{
    display: inline-block;
    color: #FF8200;
}
.basket-container .my-css{
    height: 100rpx;
    line-height: 100rpx;
    font-size: 32rpx;
    color: #fff;
    width: 180rpx;
    border: none;
}

.back{
    position: fixed;
    width: 100%;
    left: 0;
    top: 0;
    bottom: 100rpx;
    overflow: hidden;
    background: rgba(0,0,0,.4);
    z-index: 2;
}
.back .active{
    transform: translateY(-100%);
}
.goods-detail{
    width: 100%;
    height: 688rpx;
    position: absolute;
    bottom: -688rpx;
    font-size: 32rpx;
    color: #666;
    background: #fff;
    transition: all .5s;
    transform: translateY(0);
}
.goods-detail .banner{
    width: 690rpx;
    height: 88rpx;
    padding: 0 30rpx;
    line-height: 88rpx;
    display: flex;
    justify-content: space-between;
    background: #ececec;
}
.banner .clear-all{
    display: flex;
    align-items: center;
}
.goods-detail .banner .describe{
    margin-left: 10rpx;
}
.goods-detail .scroller{
    height: 600rpx;
    width: 100%;
}
.scroll-item{
    color: #333;
    display: flex;
    padding: 24rpx 30rpx;
}
.scroll-item .left{
    width: 500rpx;
    font-size: 0;
}
.scroll-item .left .goods-name{
    overflow : hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    font-size: 28rpx;
}
.scroll-item .right{
    flex: 1;
    position: relative;
}
.scroll-item .left .goods-price{
    display: flex;
    margin-top: 10rpx;
    color: #999;
    font-size: 28rpx;
}
.scroll-item .left .num-price{
    color: #FF8200;
    margin-right: 10rpx;
}
.scroll-item .right .stepper-wrapper{
    width: 100%;
    height: 50rpx;
    position: absolute;
    bottom: 6rpx;
    right: 0;
}


























